<% content_for :title, "DictyConf" %>

<div class="container">
	<%= image_tag("2013/header.jpg") %>
</div>

<div class="container">
	<div class="row">
		<div class="span7">
			<div class="well">
				<h3> Dicty Annual Conference, <%= DictyConfig.conference['year'] %></h3>
				<br/>
				<h4><%= DictyConfig.conference['begin'] %> - <%= DictyConfig.conference['end'] %> 
				<br /> <%= DictyConfig.conference['location'] %>
			</h4>
			</div>
		</div>

		<div class="span4">
			<div class="well">
				<p>Hosted By:</p>
				<h5>
					<ul id="hosts">
						<% DictyConfig.hosts.each do |k, v| %>
							<li><address>
							<strong><%= v['name'] %></strong> - 
							<a href="mailto:<%= v['email'] %>"><%= v['email'] %></a>
						</address></li>
					<% end %>
					</ul>
				</h5>
			</div>
		</div>
	</div>

	<%= render :file => 'home/conference-info' %>

</div>
